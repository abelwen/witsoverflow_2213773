<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreatePost"> // changed from MainActivity to CreatePost

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="671dp"
            android:text="Create Post"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="298dp"
            android:layout_marginBottom="610dp"
            android:text="Caption"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="199dp"
            android:layout_marginEnd="318dp"
            android:layout_marginBottom="513dp"
            android:inputType="textMultiLine"
            android:text="Post"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="267dp"
            android:layout_marginBottom="377dp"
            android:text="Tags : Max 3"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editInputPost"
            android:layout_width="295dp"
            android:layout_height="73dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="237dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="421dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editInputCaption"
            android:layout_width="294dp"
            android:layout_height="40dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="547dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editInputTags"
            android:layout_width="294dp"
            android:layout_height="55dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="375dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="301dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonPost"
            android:layout_width="193dp"
            android:layout_height="55dp"
            android:layout_marginStart="109dp"
            android:layout_marginTop="488dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="188dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="#8BC34A"
            android:text="POST"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="604dp"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/ic_baseline_home_24"
            android:backgroundTint="#2196F3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>




